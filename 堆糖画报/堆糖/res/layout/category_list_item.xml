<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:textColor="#89683B"
        android:background="#EAEBEC" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_11"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:tag="0"
        android:orientation="horizontal">
 
        <ImageView 
            android:id="@+id/iv_name11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/tv_name11"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="@drawable/text_color_category"
            android:paddingTop="20dp"
            android:textSize="14sp" />
      </LinearLayout>
      <LinearLayout
          android:id="@+id/ll_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:tag="1"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/iv_name12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv_name12"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="@drawable/text_color_category"
            android:paddingTop="20dp" 
            android:textSize="14sp"/>

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_21"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:tag="2"
        android:orientation="horizontal">
 
        <ImageView 
            android:id="@+id/iv_name21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/tv_name21"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="@drawable/text_color_category"
            android:paddingTop="20dp"
            android:textSize="14sp" />
      </LinearLayout>
      <LinearLayout
        android:id="@+id/ll_22"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:tag="3"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/iv_name22"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv_name22"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textColor="@drawable/text_color_category"
            android:paddingTop="20dp" 
            android:textSize="14sp"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
