<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:background="@drawable/news_item_bg"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/image_default" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textColor="#000"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="12sp" 
        android:background="#fff"
        android:paddingLeft="5dp"/>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal" >
        
        <Button
        android:id="@+id/bt_reply"
        style="@style/CommentStyle"
        android:drawableLeft="@drawable/blog_list_icon_comments"
        android:padding="5dp"
        />
        
        <Button
        android:id="@+id/bt_like"
        style="@style/CommentStyle"
        android:drawableLeft="@drawable/blog_list_icon_good"
        />
        
        <Button
        android:id="@+id/bt_favorite"
        style="@style/CommentStyle"
        android:drawableLeft="@drawable/blog_list_icon_star"
       />
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@android:color/darker_gray"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#fff"
        >
        <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:src="@drawable/image_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_avatar"
        android:paddingTop="8dp"
        android:textColor="#000"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignBottom="@+id/iv_avatar"
        android:paddingBottom="8dp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="10sp" />
        
    </RelativeLayout>
</LinearLayout>
